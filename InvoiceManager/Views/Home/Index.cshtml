@model IEnumerable<Invoice>
<h3 class="p-2 bg-primary text-white text-center">Счета</h3>
<div class="container-fluid mt-3">
    <div class="row">
        <div class="col font-weight-bold">Id</div>
        <div class="col font-weight-bold">Number</div>
        <div class="col font-weight-bold">Sum</div>
        <div class="col font-weight-bold">Note</div>
        <div class="col font-weight-bold">Created date</div>
        <div class="col"></div>
    </div>
    @if (Model.Count() == 0)
    {
        <div class="row">
            <div class="col text-center p-2">Данных нет</div>
        </div>
    }
    else
    {
        @foreach (var item in Model)
        {
        <div class="row p-2">
            <div class="col">@item.Id</div>
            <div class="col">@item.Number</div>
            <div class="col">@item.Sum</div>
            <div class="col">@item.Note</div>
            <div class="col">@item.Created</div>
            <div class="col">
                <form asp-action="DeleteInvoice" method="post">
                    <a asp-action="UpdateInvoice" asp-route-key="@item.Id" class="btn btn-outline-primary">Изменить</a>
                    <input type="hidden" name="Id" value="@item.Id" />
                    <button type="submit" class="btn btn-outline-danger">
                        Удалить
                    </button>
                </form>
            </div>
        </div>
        }
    }
    <div class="row p-2">
        <div class="col">
            <a asp-action="AddInvoice" class="btn btn-outline-info">Добавить</a>
        </div>
    </div>
</div>