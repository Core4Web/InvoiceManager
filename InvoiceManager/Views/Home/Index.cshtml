@model IEnumerable<Invoice>
<h3 class="p-2 bg-primary text-white text-center">Счета</h3>
<div class="container-fluid mt-3">
    <div class="row">
        <div class="col font-weight-bold">Number</div>
        <div class="col font-weight-bold">Sum</div>
        <div class="col font-weight-bold">Note</div>
        <div class="col font-weight-bold">Created date</div>
    </div>
    @if (Model.Count()==0)
    {
        <div class="row">
            <div class="col text-center p-2">Данных нет</div>
        </div>
    } else
    {
        @foreach(var item in Model)
        {
        <div class="row p-2">
            <div class="col">@item.Number</div>
            <div class="col">@item.Sum</div>
            <div class="col">@item.Note</div>
            <div class="col">@item.Created</div>
        </div>
        }
    }
</div>